<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="740.0" prefWidth="639.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csd214lab.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" />
    <TextField fx:id="uid" text="userID" /> <!-- Changed from 'id' to 'userID' -->
    <TextField fx:id="uusername" text="username" />
    <TextField fx:id="uuseremail" text="useremail" /> <!-- Changed from 'email' to 'useremail' -->
    <TextField fx:id="uuserpassword" text="userpassword" /> <!-- Changed from 'password' to 'userpassword' -->
    <Button mnemonicParsing="false" onAction="#InsertData" text="Insert" />
    <Button mnemonicParsing="false" onAction="#UpdateData" text="Update" />
    <Button mnemonicParsing="false" onAction="#DeleteData" text="Delete" />
    <Button mnemonicParsing="false" onAction="#LoadData" text="LoadData" />
    <Button onAction="#onHelloButtonClick" text="Fetch" />
    <TableView fx:id="userTable" prefHeight="200.0" prefWidth="327.0">
        <columns>
            <TableColumn fx:id="username" prefWidth="75.0" text="Username" />
            <TableColumn fx:id="useremail" prefWidth="75.0" text="useremail" /> <!-- Changed from 'Email' to 'useremail' -->
            <TableColumn fx:id="userpassword" prefWidth="75.0" text="userpassword" /> <!-- Changed from 'Password' to 'userpassword' -->
            <TableColumn fx:id="userID" prefWidth="75.0" text="userID" /> <!-- No change needed for 'ID' -->
        </columns>
    </TableView>
</VBox>

